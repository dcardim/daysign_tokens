{
  "name": "@dcardim/daysign-tokens",
  "version": "0.0.3",
  "description": "Daysign Tokens",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "theo": "^8.1.5",
    "theo-loader": "^4.0.0"
  },
  "scripts": {
    "web": "theo src/tokens.yml --transform web --format scss --dest dist",
    "ios": "theo src/tokens.yml --transform ios --format ios.json --dest dist",
    "android": "theo src/tokens.yml --transform android --format android.xml --dest dist"
  },
  "keywords": [
    "tokens",
    "design tokens",
    "design system"
  ],
  "author": "Dayana Junger",
  "license": "MIT",
  
  "dependencies": {
    "optimist": "^0.6.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dcardim/daysign_tokens.git"
  }
}

